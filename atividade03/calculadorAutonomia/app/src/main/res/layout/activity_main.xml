<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etConsumoMedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="@string/consumo_medio"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/etQtdeLitros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRes" />

    <EditText
        android:id="@+id/etQtdeLitros"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="@string/quantidade_litros"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcular"
        app:layout_constraintStart_toStartOf="@+id/etConsumoMedio"
        app:layout_constraintTop_toBottomOf="@+id/etConsumoMedio" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="131dp"
        android:backgroundTint="#2C8047"
        android:text="@string/calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etQtdeLitros"
        app:layout_constraintTop_toBottomOf="@+id/etQtdeLitros" />

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginTop="207dp"
        android:layout_marginBottom="132dp"
        android:text="@string/tela_mensagem"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/etConsumoMedio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>